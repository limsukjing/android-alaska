<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/piano_card_1"
        android:layout_width="250dp"
        android:layout_height="250dp">

        <FrameLayout
            android:id="@+id/piano_pause_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="60dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_pause"
                android:backgroundTint="@color/primary_white"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/piano_img_1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:contentDescription="@string/prompt_spotify"
                android:scaleType="centerCrop"
                android:src="@drawable/playlist_5" />

            <TextView
                android:id="@+id/piano_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:text="Piano in the Background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/piano_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="A calm piano soundtrack to all activities."
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/piano_card_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <FrameLayout
            android:id="@+id/piano_pause_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="60dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_pause"
                android:backgroundTint="@color/primary_white"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/piano_img_2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:contentDescription="@string/prompt_spotify"
                android:scaleType="centerCrop"
                android:src="@drawable/playlist_6" />

            <TextView
                android:id="@+id/piano_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Piano Comfort"
                android:textStyle="bold"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/piano_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Relaxing and comforting piano music."
                android:maxLines="2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
