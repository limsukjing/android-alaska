<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_weight="7"
    android:background="@android:color/transparent"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingStart="6dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tweet_mood_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@color/tw__light_gray" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingStart="16dp" >

        <TextView
            android:id="@+id/tweet_mood_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/prompt_twitter_mood"
            android:textColor="@color/primary_blue" />

        <TextView
            android:id="@+id/tweet_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_journal_description"
            android:paddingTop="2dp" />

    </LinearLayout>
</LinearLayout>